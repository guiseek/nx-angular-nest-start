{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wws/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@wws/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@wws/common/util/browser": ["libs/common/util/browser/src/index.ts"],
      "@wws/common/util/http": ["libs/common/util/http/src/index.ts"],
      "@wws/ui-kit": ["libs/ui-kit/src/index.ts"],
      "@wws/account/api/users": ["libs/account/api/users/src/index.ts"],
      "@wws/account/api/companies": ["libs/account/api/companies/src/index.ts"],
      "@wws/account/api/auth": ["libs/account/api/auth/src/index.ts"],
      "@wws/account/lazy/company": ["libs/account/lazy/company/src/index.ts"],
      "@wws/account/lazy/user": ["libs/account/lazy/user/src/index.ts"],
      "@wws/account/lazy/auth": ["libs/account/lazy/auth/src/index.ts"],
      "@wws/account/shared/auth": ["libs/account/shared/auth/src/index.ts"],
      "@wws/account/shared/data-access": [
        "libs/account/shared/data-access/src/index.ts"
      ],
      "@wws/account/shared/user": ["libs/account/shared/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
